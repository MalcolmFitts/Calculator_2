<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id = "@+id/text_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation = "vertical">

        <TextView
            android:id = "@+id/text_view_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity = "right"
            android:textSize="32sp"
            android:text = "00000000"/>

        <TextView
            android:id = "@+id/text_view_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity = "right"
            android:textSize="32sp"
            android:text = "00000000"/>

    </LinearLayout>


    <RelativeLayout
        android:id = "@+id/button_pad"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/text_field"
        android:gravity="center">



        <Button
            android:id = "@+id/nine_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "9"/>

        <Button
            android:id = "@+id/eight_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/nine_button"
            android:text = "8"/>

        <Button
            android:id = "@+id/seven_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/eight_button"
            android:text = "7"/>

        <Button
            android:id = "@+id/six_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nine_button"
            android:text = "6"/>

        <Button
            android:id = "@+id/five_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/six_button"
            android:layout_below="@id/eight_button"
            android:text = "5"/>

        <Button
            android:id = "@+id/four_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/five_button"
            android:layout_below="@id/seven_button"
            android:text = "4"/>

        <Button
            android:id = "@+id/three_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/six_button"
            android:text = "3"/>

        <Button
            android:id = "@+id/two_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/three_button"
            android:layout_below="@id/five_button"
            android:text = "2"/>

        <Button
            android:id = "@+id/one_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/two_button"
            android:layout_below="@id/four_button"
            android:text = "1"/>

        <Button
            android:id = "@+id/pound_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/three_button"
            android:text = "#"/>

        <Button
            android:id = "@+id/zero_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pound_button"
            android:layout_below="@id/two_button"
            android:text = "0"/>

        <Button
            android:id = "@+id/clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/zero_button"
            android:layout_below="@id/one_button"
            android:text = "AC"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/operation_buttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/button_pad"
        android:layout_centerVertical="true"
        android:layout_below="@id/text_field"
        android:gravity = "center"
        android:orientation="vertical">

        <Button
            android:id = "@+id/plus_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "+" />

        <Button
            android:id = "@+id/minus_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "-" />

        <Button
            android:id = "@+id/division_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "/" />

        <Button
            android:id = "@+id/multiplication_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "*" />

        <Button
            android:id = "@+id/equal_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "=" />

    </LinearLayout>

</RelativeLayout>